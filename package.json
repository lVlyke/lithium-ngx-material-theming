{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@lithiumjs/ngx-material-theming",
  "description": "Dynamic and customizable Angular Material theming made easy.",
  "version": "0.8.0",
  "license": "MIT",
  "private": false,
  "repository": "https://github.com/lVlyke/lithium-ngx-material-theming",
  "author": "Mychal Thompson <mychalrthompson@gmail.com>",
  "keywords": [
    "angular",
    "dynamic",
    "theme",
    "theming",
    "compile",
    "compiler",
    "compilation",
    "ngx",
    "material",
    "angular-material",
    "lithium-angular",
    "lithiumjs",
    "ngx-material-theming",
    "runtime",
    "sass",
    "scss",
    "typescript"
  ],
  "bin": {
    "ltc": "./bin/ltc.js"
  },
  "scripts": {
    "build:js": "node ./scripts/build.js"
  },
  "exports": {
    "./scripts/compile-theme": "./scripts/compile-theme.js",
    ".": {
      "sass": "./src/index.scss"
    }
  },
  "peerDependencies": {
    "@angular/cdk": ">=13.0.0 <14.0.0",
    "@angular/common": ">=13.0.0 <14.0.0",
    "@angular/core": ">=13.0.0 <14.0.0",
    "@angular/material": ">=13.0.0 <14.0.0",
    "@lithiumjs/angular": ">=7.0.0",
    "rxjs": "7.x.x"
  },
  "devDependencies": {
    "@angular/animations": "^13.3.2",
    "@angular/cdk": "^13.3.2",
    "@angular/common": "^13.3.2",
    "@angular/compiler": "^13.3.2",
    "@angular/compiler-cli": "^13.3.2",
    "@angular/core": "^13.3.2",
    "@angular/forms": "^13.3.2",
    "@angular/material": "^13.3.2",
    "@angular/platform-browser": "^13.3.2",
    "@lithiumjs/angular": "^7.1.0",
    "@lithiumjs/ngx-material-theming-templates": "0.7.0",
    "@types/chroma-js": "^2.1.3",
    "@types/node": "^16.11.7",
    "chroma-js": "^2.4.2",
    "fs-extra": "^10.0.1",
    "ng-packagr": "^13.3.0",
    "rxjs": "^7.4.0",
    "sass": "^1.50.0",
    "tslib": "^2.1.0",
    "typescript": "~4.6.3",
    "zone.js": "^0.11.4"
  },
  "dependencies": {},
  "ngPackage": {
    "lib": {
      "entryFile": "./src/api.ts"
    },
    "assets": [
      "./src/index.scss",
      "./src/styles/_template.scss",
      "./src/styles/_theme.scss"
    ]
  }
}
